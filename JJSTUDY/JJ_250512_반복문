			//1부터 입력받은 수까지 홀수의 합과 3의 배수의 합을 각각 구하시오. for문을 이용하시오. 
			
			var sum1 = 0, sum2 = 0, count1, count2, number ;
			number = parseInt(prompt("정수를 입력하세요."));
			
			for ( count1 = 1; count1 <= number; count1 = count1+2) {
				sum1 = sum1 + count1;
			}
			document.write(`홀수의 합 = ${sum1}` + "<br>");
			for ( count2 = 0; count2 <= number; count2 = count2+3) {
				sum2 = sum2 + count2;
			}
			document.write(`3의 배수의 합 = ${sum2}`);
